<Page x:Class="SkalochkinFedor_ISP321_MasterFloor.Pages.AddUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SkalochkinFedor_ISP321_MasterFloor.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="800"
      Title="AddUser">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label Content="Добавление пользователя" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Наименование:"></TextBlock>
                <ComboBox Name="SelectPartnerBox"></ComboBox>
                <TextBlock Text="Тип партнера:" Margin="0 10 0 0"></TextBlock>
                <ComboBox Name="SelectTypePartnerBox"></ComboBox>
                <TextBlock Text="Рейтинг:" Margin="0 10 0 0"></TextBlock>
                <TextBox Name="SelectRateBox"></TextBox>
                <TextBlock Text="Адресс:"></TextBlock>
                <TextBox Name="EnterAddressBox"></TextBox>
                <TextBlock Text="ФИО:"></TextBlock>
                <TextBox Name="NameBox"></TextBox>
                <TextBlock Text="Телефон:"></TextBlock>
                <TextBox Name="PhoneBox"></TextBox>
                <TextBlock Text="Email:"></TextBlock>
                <TextBox Name="EmailBox"></TextBox>
                <Button Content="Добавить" Background="#67BA80" Margin="0 10 0 0"></Button>
                <Button Content="Выйти" Background="#67BA80" Margin="0 10 0 0" Click="Button_Click"></Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
